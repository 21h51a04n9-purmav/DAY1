def display(data):
    print(f"average is:{data}")
def get_input():
    a=int(input("value of a is:"))
    b=int(input("value of b is:"))
    c=int(input("value of c is:"))
    d=int(input("value of d is:"))
    return(a,b,c,d)
def average_num(a,b,c,d):
    avg=(a+b+c+d)/4
    return avg
def main():
    (a,b,c,d)=get_input()
    avg=average_num(a,b,c,d)
    display(avg)
main()
